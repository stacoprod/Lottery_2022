@model Lottery_2022.Models.Blog.CreateViewModel

@{
    ViewData["Title"] = "ValidateSession";
}

<h1>Créer un nouveau Blog</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ValidateSession" asp-controller="Home">
            <!--redirection vers le controlleur et l'action de son choix-->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div> <!--Concerne l'intégralité du formulaire-->
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

