@{
    ViewData["Title"] = "Home Page";
}

<header>
    <div class="logo"><a href="#"><img class=" logoItem" src="/images/logo.png" /></a></div>
</header>
<div class="content">
    <span class="textMessage"><iconify-icon inline icon="ic:baseline-access-time"></iconify-icon>   PROCHAINE LOTERIE DANS:</span>
    <br />
    <hr class="separation">
    <h2>Montant de la cagnotte en cours:</h2>
    <br />
    <h1>@Model.Jackpot €</h1>
    <br />
    <h2>Pour <span class="changeColor">@Model.NumberOfPlayers</span> parties jouées</h2>
    <br />
    <br />
    <div class="buttonBox">
        <a class="button" asp-controller="Home" asp-action="Session">JE PARTICIPE</a>
    </div>
    <br />
    <br />
    <h2>Accéder aux résultats:</h2>
    <br />
    <form action="post" id="shortGUID">
        <input type="text" name="shortGUID" class="guidText" required placeholder="Entrez ici votre code..."
            minlength="22" maxlength="22" size="22">
        <input type="submit" value="Valider" asp-controller="Home" asp-action="GetResultsWithCode" />
    </form>
    <br />
    <h3><a asp-controller="Home" asp-action="GuidInformation"><iconify-icon inline icon="ic:outline-info"></iconify-icon> En savoir plus</a></h3>
    <br />
    <br />
    <br />

</div>

